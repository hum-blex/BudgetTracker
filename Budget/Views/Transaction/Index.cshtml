@model List<TransactionModel>

<div class="row">
	<div class="col-3">
		<div class="text">
			Filter
		</div>
	</div>
	<div class="col-9">
		<div class="row">
			<div class="col-6">
				<a asp-controller="Transaction" asp-action="Upsert" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> Add
				</a>
				
			</div>
			<div class="col-6 text-end">
				Search
			</div>
		</div>
		<table class="table table-bordered mt-3">
			<thead>
				<tr>
					<td>Transaction Name</td>
					<td>Amount</td>
					<td>Category</td>
					<td>Date</td>
					<td></td>
				</tr>
			</thead>
			<tbody>
				@foreach(var obj in Model)
				{
					<tr>
						<td>@obj.Name</td>
						<td>@obj.Amount</td>
						<td>@obj.Category.CategoryName</td>
						<td>@obj.DateTime</td>
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-controller="Transaction" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
									<i class="bi bi-pencil-square"></i> Edit
								</a>
								<form method="post" asp-controller="Transaction" asp-action="Delete" asp-route-id="@obj.Id">
									<button type ="submit" class="btn btn-danger">
										<i class="bi bi-trash-fill"></i> Delete
									</button>
								</form>
							</div>
						</td>
					</tr>
					
				}
			</tbody> 
		</table>
		
	</div>
</div>
